<h1>Dodaj bohatera</h1>
<div class="form_newhero">
<%= image_tag('castleup.png', :class=>"castle") %>
<%= form_for @hero, :html => {:multipart => true}, :validate=> true do |f| %>
  <%= f.error_messages %>
  <div class="field">
  <span>*</span> <%= f.label "nazwa" %><br />
  <%= f.text_field :name %>
</div>
  <div class="field">
    <span>*</span> <%= f.label "Baśń" %></br>
    <%= f.select :story_id, @stories, {:include_blank => true} %>
  </div>
  <div class="field">
    <span>*</span> <%= f.label "opis" %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
  <span>*</span> <%= f.label "tagi" %><br />
    <%= f.text_field :tag_list, :value=>@hero.tag_list %>
  </div>
  <div class="field">
    <%= f.label "ilustracja" %><br />
    <%= f.file_field :picture %>
  </div>
  <div class="field">
    <%= f.label "opis ilustracji:" %><br />
    <%= f.text_field :image_description %>
  </div>
  <div class="actions">
    <%= f.submit "", :class=> 'buttonnewhero'%>
  </div>
<% end %>
</div>
<%= link_to 'Show', @hero %> |
<%= link_to 'Back', heros_path %>
