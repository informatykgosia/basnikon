
<%= form_for @hero, :html => {:multipart => true}, :validate=> true do |f| %>
  <%= f.error_messages %>
    <%= f.label "nazwa" %><br />
    <%= f.text_field :name %>
  <div class="field">
    <%= f.label :story_id, "baśńooo" %><br />
    <%= f.select :story_id, @stories %>
  </div>
  <div class="field">
    <%= f.label "opis" %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label "ilustracja" %><br />
    <%= f.file_field :picture %>
  </div>
  <div class="field">
    <%= f.label "opis ilustracji:" %><br />
    <%= f.text_field :image_description %>
  </div>
  <div class="field">
    <%= f.label "tagi" %><br />
    <%= f.text_field :tag_list, :value=>@hero.tag_list %>
  </div>
