<h1>Edycja autora</h1>
<div class="editauthor">
<%= form_for @author, :validate => true do |f| %>
  <%= f.error_messages %>

  <div class="field">
    <span>*</span>   <%= f.label "imię/imiona" %><br />
    <%= f.text_field :first_name %>
  </div>
  <div class="field">
    <span>*</span> <%= f.label "nazwisko" %><br />
    <%= f.text_field :last_name %>
  </div>
  <div class="field">
    <%= f.label "portret" %><br />
    <%= f.file_field :image%>
  </div>
  <div class="field">
    <%= f.label "opis:" %><br />
    <%= f.text_area :description %>
  </div>
  <div class="actions">
    <%= f.submit "", :class=>"buttoneditauthor" %>
  </div>
<% end %>
</div>
<%= link_to 'powrót', authors_path %>
